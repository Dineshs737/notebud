# .env.local - For using Docker MongoDB
# Copy this to .env when you want to use local Docker database

# Local Docker MongoDB settings
DB_HOST=mongo
DB_PORT=27017
DB_NAME=
DB_USER=
DB_PASS=

# MongoDB Docker container credentials
MONGO_INITDB_ROOT_USERNAME=
MONGO_INITDB_ROOT_PASSWORD=
MONGO_INITDB_DATABASE=

# Leave empty to use local MongoDB
MONGODB_URI=

# JWT Secret (generate a random string)
JWT_SECRET=

# Security
COOKIE_SECURE=false

# Google reCAPTCHA keys
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# File Upload Configuration (in bytes)
# Default: 20MB per user, 5MB per file
MAX_USER_STORAGE=20971520
MAX_FILE_SIZE=5242880
MAX_FILES_PER_USER=100

# Server upload limits (should be higher than MAX_FILE_SIZE)
SERVER_MAX_UPLOAD=52428800
SERVER_MAX_POST=62914560
